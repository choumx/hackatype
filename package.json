{
  "name": "hackatype",
  "version": "0.1.0",
  "main": "app.js",
  "scripts": {
    "start": "http-server build -p ${PORT:-8080}",
    "prestart": "npm run build",
    "build": "npm run build:webpack && cp -r src/* build/",
    "build:webpack": "mkdirp build && ncp src/index.html build/index.html && webpack --config webpack.config.js",
    "postbuild": "uglifyjs build/app.js --pure-funcs classCallCheck Object.defineProperty Object.freeze invariant warning -c unsafe,collapse_vars,evaluate,screw_ie8,loops,keep_fargs=false,pure_getters,unused,dead_code -m -o build/app.js -p relative --in-source-map build/app.js.map --source-map build/app.js.map",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-babili": "0.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-loose": "^8.0.0",
    "babel-preset-stage-0": "^6.24.1",
    "css-loader": "^0.28.9",
    "extract-text-webpack-plugin": "^3.0.2",
    "gh-pages": "^0.12.0",
    "http-server": "^0.11.1",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "replace-bundle-webpack-plugin": "^1.0.0",
    "style-loader": "^0.19.1",
    "uglify-js": "^3.3.8",
    "webpack": "^3.10.0",
    "webpack-cleanup-plugin": "^0.5.1",
    "webpack-dev-server": "^2.11.1"
  },
  "dependencies": {
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.9.1",
    "preact": "^8.2.7",
    "preact-router": "^2.6.0",
    "todomvc-app-css": "^2.1.0",
    "todomvc-common": "^1.0.4"
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "browser": true,
        "jsx": true
      }
    },
    "rules": {
      "require-jsdoc": "off",
      "valid-jsdoc": "off",
      "max-len": "off",
      "no-unused-vars": "off",
      "space-infix-ops": "warn"
    }
  }
}
