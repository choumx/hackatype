{
  "name": "hackatype",
  "version": "0.1.0",
  "main": "app.js",
  "scripts": {
    "start": "http-server build -p ${PORT:-8080}",
    "prestart": "yarn build",
    "build": "rm -rf build && mkdir build && cp src/index.html build/index.html && yarn rollup -c rollup.config.js",
    "deploy": "gh-pages -d build"
  },
  "devDependencies": {
    "@babel/cli": "v7.0.0-beta.38",
    "@babel/core": "v7.0.0-beta.38",
    "@babel/plugin-proposal-class-properties": "v7.0.0-beta.38",
    "@babel/plugin-proposal-object-rest-spread": "v7.0.0-beta.38",
    "@babel/plugin-transform-react-jsx": "v7.0.0-beta.38",
    "@babel/preset-env": "v7.0.0-beta.38",
    "css-loader": "^0.28.9",
    "gh-pages": "^1.1.0",
    "http-server": "^0.11.1",
    "rollup": "^0.55.0",
    "rollup-plugin-babel": "^4.0.0-beta.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.2",
    "style-loader": "^0.19.1",
    "uglify-js": "^3.3.8",
    "undom": "^0.3.3"
  },
  "dependencies": {
    "eslint": "^4.16.0",
    "eslint-config-google": "^0.9.1",
    "preact": "^8.2.7",
    "todomvc-app-css": "^2.1.0",
    "todomvc-common": "^1.0.4"
  },
  "eslintConfig": {
    "extends": [
      "google"
    ],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "browser": true,
        "jsx": true
      }
    },
    "rules": {
      "require-jsdoc": "off",
      "valid-jsdoc": "off",
      "max-len": "off",
      "no-unused-vars": "off",
      "space-infix-ops": "warn"
    }
  }
}
